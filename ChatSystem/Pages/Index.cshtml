@page
<!--- Login Screen -->
<form class="form" id="loginscreen" style="width: 400px; margin:0 auto; margin-top:200px;">
    <h2>Login</h2>
    <input type="text" class="form-control" id="username">
    <button class="btn btn-lg btn-primary" style="margin-top:10px;" type="button" id="username_submit">Submit</button>
</form>


<!-- Drop down box for groups -->
<div class="GroupBox">
    <select class="form-control" id="group_list" style="display: none; margin-top:50px; width:60%;">
        <option>Select a group..</option>
    </select>
    <button id="ShowGroupInput" type="submit" class="btn">Add Group</button>
    <button id="AddGroup" type="submit" class="btn">Create Group</button>
    <button id="Cancel" type="submit" class="btn">Cancel</button>
    <input id="GroupName" type="text" class="form-control" style="width:100px;" />
</div>

<button id="AddCardButton">Add Card</button>

<!-- Card template -->

<div id="card_list" class="card">
    <form id="card">

    </form>
</div>

